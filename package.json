{
  "name": "full-circle",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@parcel/transformer-sass": "2.3.2",
    "nodemon": "^2.0.15",
    "parcel": "^2.3.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "dev:client": "API_URL=http://localhost:8080 parcel ./packages/client/public/index.html --dist-dir packages/client/dist",
